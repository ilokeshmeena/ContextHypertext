<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".pages.page4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/Arial"
                android:padding="5dp"
                android:text="@string/page4_1"
                android:textColor="@android:color/black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/Arial"
                android:padding="5dp"
                android:text="@string/page4_2"
                android:textColor="@android:color/black"
                android:textSize="19sp" />
            <ImageView
                android:background="@drawable/img5"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/page4_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/Arial"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:textSize="19sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/Arial"
                android:padding="5dp"
                android:text="@string/page4_4"
                android:textColor="@android:color/black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/page4_tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/Arial"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:textSize="19sp" />
            <android.support.constraint.ConstraintLayout
                android:id="@+id/bottom_buttons"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/page4_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:drawableLeft="@drawable/ic_home_white_24dp"
                    android:padding="10dp"
                    android:text=" Home"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/page4_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:drawableRight="@drawable/ic_navigate_next_white"
                    android:padding="10dp"
                    android:text="Next"
                    android:textColor="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>